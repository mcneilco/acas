extends layout
block content
    nav.navbar.navbar-inverse.navbar-fixed-top
        div.container-fluid
            div.navbar-header
                a.navbar-brand ACAS

    div.container.loginContainer
        div.row
            div.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
                div.panel.panel-default
                    div.panel-heading
                        h3.panel-title Reset Password
                    div.panel-body
                        p.help-block Please enter the email address associated with your account.
                        form.form-horizontal(action="/passwordReset", method="post", role="form")
                            div.form-group
                                label.control-label.col-sm-3(for="email") Email:
                                div.col-sm-9
                                    input.form-control(type="email", name="email", id="email", required, placeholder="Enter your email address")
                            div.form-group
                                div.col-sm-offset-3.col-sm-9
                                    button.btn.btn-primary.btn-block(type="submit") Send Reset
                                    p.help-block.text-center
                                        a(href="/login") Back to Login
        - if (message == "Your new password has been sent to your email address.")
            div.row
                div.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
                    div.alert.alert-success.loginError #{message}
        - else if (message != "")
            div.row
                div.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
                    div.alert.alert-danger.loginError #{message}