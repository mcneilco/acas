extends layout
block content
    nav.navbar.navbar-inverse.navbar-fixed-top
        div.container-fluid
            div.navbar-header
                span.navbar-brand #{logoText}

    div.container.loginContainer
        div.row
            div.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
                div.panel.panel-default
                    div.panel-heading
                        h3.panel-title Please Login
                    div.panel-body
                        - var action = "/login"
                        if redirectUrl
                            - var action = '/login?redirect_url=' + redirectUrl
                        form.form-horizontal(action="#{action}", method="post", role="form")
                            div.form-group
                                label.control-label.col-sm-3(for="username") Username:
                                div.col-sm-9
                                    input.form-control(type="text", name="username", id="username", required, autofocus)
                            div.form-group
                                label.control-label.col-sm-3(for="password") Password:
                                div.col-sm-9
                                    input.form-control(type="password", name="password", id="password", required)
                            div.form-group
                                div.col-sm-offset-3.col-sm-9
                                    button.btn.btn-primary.btn-block(type="submit") Sign In
                                    - if (resetPasswordOption)
                                        p.help-block.text-center
                                            a(href="/passwordReset") Forgot your password?
            - if (redirectUrl)
                div.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
                    div.alert.alert-success.loginError After login you will be redirected to #{redirectUrl}
            - if (message == "Your new password is set.")
                div.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
                    div.alert.alert-success.loginError #{message}
            - else if (message != "")
                div.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
                    div.alert.alert-danger.loginError #{message}
